<%- include('../partials/header'); %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a New Campground</h1>
		<div style="width: 30%;margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="location" name="location">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="price per night" name="price">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder= "image url" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="description">
				</div>
				<div class="form-group form-check">
					<h4>Wifi Available <input class="form-check-input" type="checkbox" name="wifi" value= "Yes"></h4>
				</div>
				<div class="form-group form-check">
					<h4>Tent Camping Available<input class="form-check-input" type="checkbox" name="tent" value= "Yes"></h4>
				</div>
				<div class="form-group form-check">
					<h4>Power Available<input class="form-check-input" type="checkbox" name="power" value= "Yes"></h4>
				</div>
				<div class="form-group form-check">
					<h4>RV Camping Available<input class="form-check-input" type="checkbox" name="rv" value= "Yes"></h4>
				</div>
				<div class="form-group form-check">
					<h4>Handicap Accessible<input class="form-check-input" type="checkbox" name="handicap" value= "Yes"></h4>
				</div>
				<div class="form-group form-check">
					<h4>Pets Allowed<input class="form-check-input" type="checkbox" name="pets" value= "Yes"></h4>
				</div>
				<div class="form-group form-check">
					<h4>Boat Ramp<input class="form-check-input" type="checkbox" name="boatramp" value= "Yes"></h4>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back!</a>
		</div>

	</div>
</div>

<%- include('../partials/footer'); %>