<%- include('../partials/header'); %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit <%=campground.name %></h1>
		<div style="width: 30%;margin: 25px auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value= "<%= campground.name %>" name="campground[name]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value= "<%= campground.location %>" name="campground[location]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value= "<%= campground.price %>" name="campground[price]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value= "<%= campground.image %>" name="campground[image]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value= "<%= campground.description %>" name="campground[description]">
				</div>
				<div class="form-group form-check">
					<% if(campground.wifi == "Yes") { %>
						<h4>Wifi Available <input class="form-check-input" type="checkbox" name="campground[wifi]" value= "Yes" checked></h4>
					<% }else { %>
						<h4>Wifi Available <input class="form-check-input" type="checkbox" name="campground[wifi]" value= "Yes"></h4>
					<% } %>
				</div>
				<div class="form-group form-check">
					<% if(campground.tent == "Yes") { %>
						<h4>Tent Camping Available<input class="form-check-input" type="checkbox" name="campground[tent]" value= "Yes" checked></h4>
					<% }else { %>
						<h4>Tent Camping Available<input class="form-check-input" type="checkbox" name="campground[tent]" value= "Yes"></h4>
					<% } %>
				</div>
				<div class="form-group form-check">
					<% if(campground.power == "Yes") { %>
						<h4>Power Available<input class="form-check-input" type="checkbox" name="campground[power]" value= "Yes" checked></h4>
					<% }else { %>
						<h4>Power Available<input class="form-check-input" type="checkbox" name="campground[power]" value= "Yes"></h4>
					<% } %>
				</div>
				<div class="form-group form-check">
					<% if(campground.rv == "Yes") { %>
						<h4>RV Camping Available<input class="form-check-input" type="checkbox" name="campground[rv]" value= "Yes" checked></h4>
					<% }else { %>
						<h4>RV Camping Available<input class="form-check-input" type="checkbox" name="campground[rv]" value= "Yes"></h4>
					<% } %>
				</div>
				<div class="form-group form-check">
					<% if(campground.handicap == "Yes") { %>
						<h4>Handicap Accessible<input class="form-check-input" type="checkbox" name="campground[handicap]" value= "Yes" checked></h4>
					<% }else { %>
						<h4>Handicap Accessible<input class="form-check-input" type="checkbox" name="campground[handicap]" value= "Yes"></h4>
					<% } %>
				</div>
				<div class="form-group form-check">
					<% if(campground.pets == "Yes") { %>
						<h4>Pets Allowed<input class="form-check-input" type="checkbox" name="campground[pets]" value= "Yes" checked></h4>
					<% }else { %>
						<h4>Pets Allowed<input class="form-check-input" type="checkbox" name="campground[pets]" value= "Yes"></h4>
					<% } %>
				</div>
				<div class="form-group form-check">
					<% if(campground.boatramp == "Yes") { %>
						<h4>Boat Ramp<input class="form-check-input" type="checkbox" name="campground[boatramp]" value= "Yes" checked></h4>
					<% }else { %>
						<h4>Tent Camping Available<input class="form-check-input" type="checkbox" name="campground[boatramp]" value= "Yes"></h4>
					<% } %>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground._id %>">Go Back!</a>
		</div>

	</div>
</div>

<%- include('../partials/footer'); %>